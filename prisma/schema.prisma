generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Distro {
  id                  String   @id @default(uuid())
  name                String   @db.VarChar(255)
  website             String   @db.VarChar(255)
  logo                String
  description         String
  images              String[]
  desktopEnvironments String[]
  basedOn             String
  createdAt           DateTime @default(now())
}

model WaitingDistro {
  id                  String   @id @default(uuid())
  email               String
  name                String   @db.VarChar(255)
  website             String   @db.VarChar(255)
  logo                String
  description         String
  images              String[]
  desktopEnvironments String[]
  basedOn             String
  createdAt           DateTime @default(now())
}
