{{ define "style" }}
<link rel="stylesheet" href="/public/css/distro.page.css" />
{{ end }}

{{ define "content" }}
  <div>
		{{ range . }}
			<div class="distro-header">
				<img src="{{ .Logo }}" width="128" height="128"/>
        <div class="title">
          <h2>{{ .Name }}</h2>
          <p>{{ .Description }}</p>
        </div>
			</div>
		{{ end }}
  </div>
{{ end }}
